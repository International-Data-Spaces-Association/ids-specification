{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"title": "ContractOfferMessageSchema",
	"type": "object",
	"allOf": [
	  {
		"$ref": "#/definitions/ContractOfferMessage"
	  }
	],
