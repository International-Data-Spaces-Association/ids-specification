{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "DatasetSchema",
    "type": "object",
    "allOf": [
        {
            "$ref": "#/definitions/Dataset"
        }
    ],
    "$id": "https://w3id.org/dspace/schemas/v0.8/DatasetSchema",
    "definitions": {
        "Dataset": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "https://w3id.org/dspace/schemas/v0.8/catalog-schema.json#/definitions/Resource"
                },
                {
                    "properties": {
                        "@context": {
                            "type": "string",
                            "const": "https://w3id.org/dspace/v0.8/context.json"
                        },
                        "@type": {
                            "type": "string",
                            "const": "dcat:Dataset"
                        },
                        "dct:title": {
                            "type": "string"
                        },
                        "dct:description": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "string"
                            }
                        },
                        "dcat:keyword": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "odrl:hasPolicy": {
                            "$ref": "https://w3id.org/dspace/schemas/v0.8/dataset-schema.json#/definitions/Policy"
                        },
                        "dcat:distribution": {
                            "type": "array",
                            "items": {
                                "type": "object"
                            }
                        }
                    },
                    "required": [ "@context", "@id", "@type" ]
                }
            ]
        }
    }
}
